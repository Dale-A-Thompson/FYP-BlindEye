<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlindEye" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryVariant">#FF397D3D</item>
        <item name="colorOnPrimary">#0091EA</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#0091EA</item>
        <item name="colorSecondaryVariant">#0091EA</item>
        <item name="colorOnSecondary">#0091EA</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BlindEye.NoActionBar" parent="Theme.Material3.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BlindEye.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BlindEye.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.BlindEye.AlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#0091EA</item>
    </style>
</resources>